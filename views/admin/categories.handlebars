<h2>Categories List:</h2>
<hr />

<a href="/admin/categories/add">
  <button class="btn btn-success mb-4">New Category</button>
</a>

{{#each categories}}

  <div class="card">
    <div class="card-body">
      <h4>{{name}}</h4>
      <small>Slug: {{slug}}</small><br />
      <small>Data de criação: {{date}}</small><br>
      <a href="category/edit/{{id}}"><button
          class="btn btn-success mt-2"
        >Edit category</button></a>
    </div>
  </div>

{{/each}}